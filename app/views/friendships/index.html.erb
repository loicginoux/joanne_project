<div class="row" id="team-rubix">
	<div class="span8 feeds">
		<div class="cbm_wrap">
			<div class="page-header">
				<div class="pull-right">
					<div class="btn-group" data-toggle="buttons-radio">
						<button type="button" class="btn listToggler friends">Following</button>
						<button type="button" class="btn listToggler everyone">Everyone</button>
					</div>
				</div>
				<h3>What everyone else is eating</h3>
			</div>
			<div class="feedList">

			</div>
			<!-- Show link only if there are more than one page and pass page and sorting parameters -->
			<div class="feedLoading"></div>
  		<div class="show_more_btns">

  		</div>
		</div>
	</div>
	<div class="span4" id="all-users">
		<div class="cbm_wrap">
			<div class="page-header">
				<h3>People that inspire you</h3>
			</div>
			<div class="users">
				<%= render :partial => "users" %>
			</div>
			<% if @users.length <= 1 %>
			<p class="alone"><i class="icon-info-sign"></i> Don't be a loner. <a class="highlight" href="<%= team_rubix_path %>">Follow a few people</a> to fill this empty space, and get inspired instantly!</p>
			<% end %>
			<!-- Show link only if there are more than one page and pass page and sorting parameters -->
			<% unless @users.total_pages < 2 %>
  				<%= link_to 'Show More', friendships_path(:sort => "users.leaderboard_points", :direction => "desc", :user_page => 2), :remote => true, :id => 'show_more_users_link', :class => "btn btn-small show_more"%>
			<%end %>

		</div>
	</div>
</div>