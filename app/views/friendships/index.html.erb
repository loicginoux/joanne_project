<div class="row" id="team-rubix">
	<div class="span8 feeds">
		<div class="cbm_wrap">
			<div class="page-header">
				<h3>What everyone else is eating</h3>
			</div>
			<div class="feedList">
			<%= render :partial => "data_points/index/feeds"  %>
			</div>
			<!-- Show link only if there are more than one page and pass page and sorting parameters -->
			<% unless @feeds.total_pages < 2 %>
				<div class="feedLoading"></div>
  			<%= link_to 'Show More', friendships_path(:feed_page => 2), :remote => true, :id => 'show_more_feeds_link', :class => "btn btn-small show_more hide"%>
			<%end %>

		</div>
	</div>
	<div class="span4" id="all-users">
		<div class="cbm_wrap">
			<div class="page-header">
				<h3>People that inspire you</h3>
			</div>
			<div class="users">
				<%= render :partial => "users" %>
			</div>
			<!-- Show link only if there are more than one page and pass page and sorting parameters -->
			<% unless @users.total_pages < 2 %>
  				<%= link_to 'Show More', friendships_path(:sort => sort_column, :direction => sort_direction, :user_page => 2), :remote => true, :id => 'show_more_users_link', :class => "btn btn-small show_more"%>
			<%end %>

		</div>
	</div>
</div>