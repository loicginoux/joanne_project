<% cache ["v1", "navbar", user.username] do %>


<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">

			<%= link_to image_tag('foodRubix_logo_beta.svg'), root_path, :class => 'brand'%>

			<div class="nav-collapse">
				<ul class="nav">
					<li>
						<%= link_to(root_path) do%>
						My Diary
						<%=image_tag("diary.svg", :class=> "nav_icon")%>
						<%end%>
					</li>
					<li>
						<%= link_to(feed_path, :user_page => 1) do%>
						Feed
						<%=image_tag("following.svg", :class=> "nav_icon") %>
						<%end%>
					</li>
					<li>
						<%= link_to(team_rubix_path) do%>
						Team Rubix
						<%=image_tag("team.svg", :class=> "nav_icon") %>
						<%end%>
					</li>
				</ul>

				<ul class="nav pull-right">

					<%= getPicture(user, 'small') %>

					<h3  class="hi_current_user other_user hide"><%= user.username%>'s diary</h3>

					<li class="dropdown current_user_menu hide">
						<a href="javascript:void(0)" class="dropdown-toggle hi_current_user" data-toggle="dropdown">Go <%= user.username%><b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li>
								<%= link_to(edit_user_path(user)) do%>
								<i class="icon-cog user_menu_icon"></i>
								Settings
								<%end%>
							</li>
							<li class="divider"></li>
							<li>
								<%= link_to(logout_path) do%>
								<i class="icon-off user_menu_icon"></i>
								Log out
								<%end%>
							</li>
						</ul>
					</li>
				</ul>
			</div><!-- /.nav-collapse -->
		</div> <!-- container -->
	</div><!-- /navbar-inner -->
</div><!-- navbar -->

<% end %>