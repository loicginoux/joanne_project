				</ul>
			</div><!-- #nav -->
		</div><!-- #header -->

		<div id="main">
				<%= yield %>
		</div><!-- #main -->
		<div id="footer">
			<h5>Contact Us - jdaudier [at] outlook [dot] com</h5>
		</div><!-- #footer -->
	</div><!-- #container -->





