<%= form_for @user, :html => { :class => "form-horizontal" } do |f| %>
	<fieldset>
		<div class="control-group <% if @user.errors[:email_recap].present? %>error<%end%>">
			<%= f.label :email_recap, "How ofter do you want to receive emails?", :class => "control-label"  %>
			<div class="controls">
				<%= f.select :email_recap, options_for_select(["Never", "Daily", "Weekly"], @user.email_recap)  %>
				<% if @user.errors[:email_recap].present? %>
					<span class="help-inline"><%= @user.errors[:email_recap].join(", ")%></span>
				<%end%>
			</div>

		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary">Update</button>
		</div>
	</fieldset>
<% end %>