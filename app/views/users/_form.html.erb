<div class="row">
	<div class="span10">
		<%= form_for @user, :html => { :class => "form-horizontal" } do |f| %>
	
			<fieldset>
				<div class="control-group <% if @user.errors[:username].present? %>error<%end%>">
					<%= f.label :username, :class => "control-label" %>
          <div class="controls">
				    <%= f.text_field :username, :class => "input-xlarge"  %>
						<% if @user.errors[:username].present? %>
							<span class="help-inline"><%= @user.errors[:username].join(", ")%></span>
						<%end%>
          </div>
        </div>
				<div class="control-group <% if @user.errors[:email].present? %>error<%end%>">
					<%= f.label :email, :class => "control-label" %>
          <div class="controls">
				    <%= f.text_field :email, :class => "input-xlarge"  %>
						<% if @user.errors[:email].present? %>
							<span class="help-inline"><%= @user.errors[:email].join(", ")%></span>
						<%end%>
          </div>
        </div>
				<div class="control-group <% if @user.errors[:password].present? %>error<%end%>">
					<%= f.label :password, :class => "control-label" %>
          <div class="controls">
				    <%= f.password_field :password, :class => "input-xlarge"  %>
						<% if @user.errors[:password].present? %>
							<span class="help-inline"><%= @user.errors[:password].join(", ")%></span>
						<%end%>
          </div>
        </div>
				<div class="control-group <% if @user.errors[:password_confirmation].present? %>error<%end%>">
					<%= f.label :password_confirmation, :class => "control-label" %>
          <div class="controls">
				    <%= f.password_field :password_confirmation, :class => "input-xlarge"  %>
						<% if @user.errors[:password_confirmation].present? %>
							<span class="help-inline"><%= @user.errors[:password_confirmation].join(", ")%></span>
						<%end%>
          </div>
        </div>
			 	<div class="form-actions">
          <button type="submit" class="btn btn-primary"><% if @user%>Update<%else%>Create account<%end%></button>
        </div>
			</fieldset>
		<% end %>
  </div><!-- span6 -->
</div><!-- row -->