
<br />
<div class="row">
	<div class="span10">
		<% if session[:omniauth] %>
		<div class="alert alert-info">
			<button type="button" class="close" data-dismiss="alert">Ã—</button>
			<strong>Complete your registration</strong>
			<p>You have been authenticated via Facebook. Please complete your registration below.</p>
		</div>
		<% end %>

		<%= form_for @user, :html => { :class => "form-horizontal" } do |f| %>

		<fieldset>
			<div class="control-group <% if @user.errors[:username].present? %>error<%end%>">
				<div class="controls">
					<% if session[:omniauth] %>
					<%= f.text_field :username, :class => "input-xlarge", :value => session[:omniauth][:info][:nickname].gsub('.', ''), :placeholder=> "Username" %>
					<% else %>
					<%= f.text_field :username, :class => "input-xlarge" , :placeholder=> "Username"  %>
					<%end%>
					<% if @user.errors[:username].present? %>
					<span class="help-inline"><%= @user.errors[:username].join(", ")%></span>
					<%end%>
				</div>
			</div>
			<div class="control-group <% if @user.errors[:email].present? %>error<%end%>">
				<div class="controls">
					<% if session[:omniauth] %>
					<%= f.text_field :email, :class => "input-xlarge", :value => session[:omniauth][:info][:email], :placeholder=> "Email"  %>
					<% else %>
					<%= f.text_field :email, :class => "input-xlarge", :placeholder=> "Email"  %>
					<%end%>
					<% if @user.errors[:email].present? %>
					<span class="help-inline"><%= @user.errors[:email].join(", ")%></span>
					<%end%>
				</div>
			</div>
			<div class="control-group <% if @user.errors[:password].present? %>error<%end%>">
				<div class="controls">
					<%= f.password_field :password, :class => "input-xlarge", :placeholder=> "Password"   %>
					<% if @user.errors[:password].present? %>
					<span class="help-inline"><%= @user.errors[:password].join(", ")%></span>
					<%end%>
				</div>
			</div>
			<div class="control-group <% if @user.errors[:password_confirmation].present? %>error<%end%>">
				<div class="controls">
					<%= f.password_field :password_confirmation, :class => "input-xlarge" , :placeholder=> "Password confirmation"  %>
					<% if @user.errors[:password_confirmation].present? %>
					<span class="help-inline"><%= @user.errors[:password_confirmation].join(", ")%></span>
					<%end%>
				</div>
			</div>
			<div class="control-group <% if @user.errors[:timezone].present? %>error<%end%>">
				<div class="controls">
					<%= time_zone_select( "user", 'timezone', nil, :default => 'Central Time (US & Canada)' )
					%>
					<% if @user.errors[:timezone].present? %>
					<span class="help-inline"><%= @user.errors[:timezone].join(", ")%></span>
					<%end%>
				</div>
			</div>



			<div class="form-actions">
				<% if current_user%>
				<button type="submit" class="btn btn-primary">Update</button>
				<%else%>
				<button type="submit" class="btn btn-primary">Create account</button>
				<% if !session[:omniauth] %>
				or
				<a href="/auth/facebook" class="auth_provider">
					<%= image_tag "facebook_login.jpg", :alt => "Facebook", :height => "28px" %>
				</a>
				<!-- or
				<a href="/auth/twitter" class="auth_provider">
				<%= image_tag "twitter_login.jpg", :alt => "Twitter", :height => "28px" %>
			</a> -->
				<%end%>
			<%end%>
		</div>
	</fieldset>
	<% end %>
</div><!-- span6 -->
</div><!-- row -->