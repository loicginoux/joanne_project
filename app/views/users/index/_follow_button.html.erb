<% unless current_user.is(user) %>
	<% if current_user.isFollowing(user).empty?%>
		<%= button_to "Follow", friendships_path(:followee => user.id), :method => :post, :class => "btn btn-primary follow", :onclick => "$(this).attr('disabled', true).parents('form').submit(); return false;"  %>
	<% else %>
		<%= button_to "Unfollow", current_user.isFollowing(user)[0], :method => :delete, :class => "btn follow", :onclick => "$(this).attr('disabled', true).parents('form').submit(); return false;"  %>
	<% end %>
<% end %>