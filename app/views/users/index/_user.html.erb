


<div class="user">
	<div class="pull-right points">
		<% unless (user.first_friend || user.hidden) %>
				<p><%= user.leaderboard_points%> points</p>
		<% end %>
		<%= render :partial => "users/index/follow_button", :locals => {:user => user}%>
	</div>
	<%= link_to user_path(:username=> user.username) do %>

		<div class="content">
				<%=  image_tag user.picture.url(:small), {:class=>"avatar"} %>
				<div class="pull-left">
					<p class="username">
						<%= user.username.capitalize%>
					</p>
					<p class="diet"><%= user.preference.diet%></p>
				</div>
		</div>
	<% end %>
</div>