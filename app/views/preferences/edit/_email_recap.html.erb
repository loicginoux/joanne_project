<%= form_for @preference, :url => preference_path(@preference),  :html => { :class => "form-horizontal" } do |f| %>
	<fieldset>
		<div class="control-group <% if @preference.errors[:daily_email].present? %>error<%end%>">
			<p>Do you want to receive emails to remind you what you have been eating? (Recommended because you'll become more aware of how many calories you ate for the day and it's the easiest way to see if you've won a Smart Choice or Hot Photo Award)</p>
			<%= f.label :daily_email, "Daily emails?", :class => "control-label"  %>
			<div class="controls">
				<%= f.check_box :daily_email %>
				<% if @preference.errors[:daily_email].present? %>
					<span class="help-inline"><%= @preference.errors[:daily_email].join(", ")%></span>
				<%end%>
			</div>

		</div>
		<div class="control-group <% if @preference.errors[:weekly_email].present? %>error<%end%>">
			<%= f.label :weekly_email, "Weekly emails?", :class => "control-label"  %>
			<div class="controls">
				<%= f.check_box :weekly_email %>
				<% if @preference.errors[:weekly_email].present? %>
					<span class="help-inline"><%= @preference.errors[:weekly_email].join(", ")%></span>
				<%end%>
			</div>

		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary">Update</button>
		</div>
	</fieldset>
<% end %>