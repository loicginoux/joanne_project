<div id="modal_{{id}}" class="hide  modal" data-id="{{id}}">
	<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Update Data point</h3>
  </div>
  <div class="modal-body">
	
		<img class="thumb pull-right" data-original-title="{{created_at_readable}}" data-content="Calories: {{calories}}" src="http://s3.amazonaws.com/foodrubix-assets/photos/{{img_path}}" />

		<fieldset>

			<div class="control-group">
				<label class="control-label">Calories</label>
				<div class="controls">
					<input class="input-xlarge" id="data_point_calories" name="data_point[calories]" type="number" value="{{calories}}">
				</div>
			</div>
			
			<div class="control-group">
				<label class="control-label">Date</label>
				<div class="controls">
					<div class="input-append date datePicker" data-date="{{uploaded_at_editable}}" data-date-format="mm-dd-yyyy">
					  <input size="16" type="text" value="{{uploaded_at_editable}}" data-date-utc="{{uploaded_at}}">
					  <span class="add-on"><i class="icon-th"></i></span>
					</div>	
				</div>
			</div>			
		</fieldset>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Cancel</a>
    <a href="#" class="btn btn-danger btn-delete" data-loading-text="Deleting...">Delete</a>
    <a href="#" class="btn btn-primary btn-save" data-loading-text="Saving...">Save changes</a>
  </div>
</div> 