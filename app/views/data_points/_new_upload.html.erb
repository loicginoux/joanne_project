<div id="new_upload" class="hide  modal uploadPhoto">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">Ã—</button>
		<h3>New Upload</h3>
	</div>
	<div class="modal-body">
		<fieldset>
			<form id="uploadForm" action="/data_points" method="POST" enctype="multipart/form-data">

					<div class="control-group editable_img_container pull-right file">
						<div class="controls">
							<img src="" />
							<a class="btn btn-upload" href="#">Upload photo</a>
							<input class="hide data_point_photo" id="fileInput" name="data_point[photo]" type="file">
							<div class="progress progress-striped active hide">
							  <div class="bar" style="width: 0%;"></div>
							</div>
						</div>
						<div>
							<span class="help-inline clear fileExtension">Formats supported: jpg, png, gif, tiff</span>
							</br>
							<span class="help-inline clear file hide">Please upload a photo</span>
						</div>
					</div>


					<div class="control-group calories">
						<label class="control-label">Calories</label>
						<div class="controls">
							<input class="" id="data_point_calories" name="data_point[calories]" type="number"
							 value="">
							<span class="help-inline calories hide">Please enter a number</span>

						</div>
					</div>

					<div class="control-group date">
						<label class="control-label">Date</label>
						<div class="controls">
							<div class="input-append date datePicker" data-date="<%= Time.zone.now.strftime("%m-%d-%Y")%>" data-date-format="mm-dd-yyyy">
								<input size="16" type="text" id="data_point_uploaded_at" name="data_point[uploaded_at]" value="<%= Time.zone.now.strftime("%m-%d-%Y")%>">
								<span class="add-on"><i class="icon-th"></i></span>
								<span class="help-inline date hide">Please enter a correct date (mm-dd-yyy)</span>

							</div>
						</div>
					</div>

			</form>
			<div class="control-group time">
				<label class="control-label">Time</label>
				<div class="controls">
					<input class="timePicker" id="timePicker" name="data_point[time]" type="text"
					 value="<%= Time.zone.now.strftime("%I:%M %p")%>">
					<span class="help-inline time hide">Please enter a correct time (HH:mm AM/PM)</span>
				</div>
			</div>

			<div class="control-group description">
				<div class="descrInput">
					<label class="control-label">Description (optional)</label>
					<div class="controls">
						<input class="" id="data_point_description" name="data_point[description]" type="text"
						value="">
					</div>
				</div>
			</div>
		</fieldset>

	</div>
	<div class="modal-footer">
		<a href="#" class="btn btn-cancel" data-dismiss="modal">Cancel</a>
		<a href="#" class="btn btn-primary btn-save btn-new-upload" data-loading-text="Uploading...">Upload</a>
	</div>
</div>