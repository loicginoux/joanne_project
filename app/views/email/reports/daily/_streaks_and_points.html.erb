<table width="100%" cellpadding="0" cellspacing="0" border="0" align="center" style="border-collapse:collapse">
  <tbody>
    <%= render :partial => "email/style/white_space" %>
    <tr>
      <td width="320" valign="top" align="left" style="border-collapse:collapse">

        <h2 style="color:#111111;font-family:sans-serif;margin-top:0;margin-bottom:0;font-size:24px;line-height:30px;padding:0 2px; border-bottom: 1px solid  #efefef;">

          Streak

        </h2>
        <br>
        <table width="320px" cellpadding="0" cellspacing="0" border="0" align="center" style="border-collapse:collapse">
          <tbody>
            <tr style="font-family:sans-serif; line-height: 24px;">
              <td>
                <table height="80px" width="150px" style="border-radius: 8px; background-color: #efefef;">
                  <tbody>
                    <tr height="8px"></tr>
                    <tr >
                      <td align="center" style="font-weight: bold; color: #434343;font-size: 22px;">
                        <span style="font-size: 28px;"><%= @user.streak %></span> <%= @user.streak > 1 ? "days" : "day" %>
                      </td>
                    </tr>
                    <tr >
                      <td align="center" style="color: #7c7c7c; font-size:12px">
                        STREAK
                      </td>
                    </tr>
                    <tr height="10px"></tr>
                  </tbody>
                </table>
              </td>
              <td width="20px"></td>
              <td>
                <table height="80px" width="150px" style="border-radius: 8px; background-color: #efefef;">
                  <tbody>
                    <tr height="8px"></tr>
                    <tr >
                      <td align="center" style="font-weight: bold; color: #434343;font-size: 22px;">
                        <span style="font-size: 28px;"><%= @user.best_streak %></span> <%= @user.best_streak > 1 ? "days" : "day" %>
                      </td>
                    </tr>
                    <tr >
                      <td align="center" style="color: #7c7c7c; font-size:12px">
                        BEST
                      </td>
                    </tr>
                    <tr height="10px"></tr>
                  </tbody>
                </table>
              </td>
            </tr>
          </tbody>
        </table>

      </td>
      <td style="border-collapse:collapse">&nbsp;</td>
      <td width="320" valign="top" align="left" style="border-collapse:collapse">




        <h2 style="color:#111111;font-family:sans-serif;margin-top:0;margin-bottom:0;font-size:24px;line-height:30px;padding:0 2px; border-bottom: 1px solid  #efefef;">
          Points
        </h2>
        <br>
        <table width="320px" cellpadding="0" cellspacing="0" border="0" align="center" style="border-collapse:collapse">
          <tbody>
            <tr style="font-family:sans-serif; line-height: 24px;">
              <td>
                <table height="80px" width="100px" style="border-radius: 8px; background-color: #efefef;">
                  <tbody>
                    <tr width="8px"></tr>
                    <tr >
                      <td align="center" style="font-weight: bold; color: #434343;font-size: 28px;">
                        <%= @daily_points %>
                      </td>
                    </tr>
                    <tr >
                      <td align="center" style="color: #7c7c7c; font-size:12px">
                        YESTERDAY
                      </td>
                    </tr>
                    <tr width="10px"></tr>
                  </tbody>
                </table>
              </td>
              <td width="10px"></td>
              <td>
                <table height="80px" width="100px" style="border-radius: 8px; background-color: #efefef;">
                  <tbody>
                    <tr width="8px"></tr>
                    <tr >
                      <td align="center" style="font-weight: bold; color: #434343;font-size: 28px;">
                        <%= @user.best_daily_score %>
                      </td>
                    </tr>
                    <tr >
                      <td align="center" style="color: #7c7c7c; font-size:12px">
                        BEST
                      </td>
                    </tr>
                    <tr width="10px"></tr>
                  </tbody>
                </table>
              </td>
              <td width="10px"></td>
              <td>
                <table height="80px" width="100px" style="border-radius: 8px; background-color: #efefef;">
                  <tbody>
                    <tr width="8px"></tr>
                    <tr >
                      <td align="center" style="font-weight: bold; color: #434343;font-size: 28px;">
                        <%= @user.leaderboard_points %>
                      </td>
                    </tr>
                    <tr >
                      <td align="center" style="color: #7c7c7c; font-size:12px">
                        TOTAL
                      </td>
                    </tr>
                    <tr width="10px"></tr>
                  </tbody>
                </table>
              </td>
            </tr>
          </tbody>
        </table>


      </td>
    </tr>

  </tbody>
</table>